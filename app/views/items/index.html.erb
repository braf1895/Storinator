<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Items</h1>

  </br>
  <table class="table">
    <thead>
    <tr>
      <th class="col">Item Name</th>
      <th classs="col">Location</th>
      <th classs="col">Number Available</th>
      <th classs="col">Number In Use</th>
      <th classs="col">Total Count</th>
      <th classs="col">Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @items.each do |item| %>
      <tr>
        <td class="row'"><%= item.iName %></td>
        <td class="row'"><%= @loc.find_by_id(item.locations_id).locName %></td>
        <td class="row'"><%= item.iAvail %></td>
        <td class="row'"><%= item.iUsed %></td>
        <td class="row'"><%= item.iTotal %></td>
        <td class="row'"><%= item.iDesc %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>


  <%= link_to 'New Item', new_item_path, :class => "btn btn-primary text-dark" %>

  </br>
</br>

  <%= link_to "Excel Spreadsheet", items_path(format: :xlsx), :class => "btn btn-success text-dark" %>

</div>
