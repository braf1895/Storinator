<p id=”alert”><%= alert %></p>


<%= form_tag sessions_path do |form| %>
  <div class="container">


    <form role="form" action="/users" accept-charset="UTF-8" method="post">

      <h1>Login</h1>

      </br>
      <div class=”form-group ”>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
      <div class=”field”>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      </br>
      <div class=”actions”>
        <%= submit_tag 'Login', class: 'btn btn-success' %>
      </div>
      <p id=”notice”><%= notice %></p>

    </form>
  </div>

<% end %>

