<h2 id=”notice”><%= notice %></h2>
<tbody>
<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Number Available</th>
    <th>Number In Use</th>
    <th>Total Items</th>
    <th>Item Description</th>
  </tr>
  <% @results.each do |result| %>
    <tr>
      <td><%= result.iName %></td>
      <td><%= @loc.find_by_id(result.locations_id).locName %></td>
      <td><%= result.iAvail %></td>
      <td><%= result.iUsed %></td>
      <td><%= result.iTotal %></td>
      <td><%= result.iDesc %></td>
      <td><%= link_to 'Edit', edit_item_path(result) %></td>
    </tr>
  <% end %>
</table>
</tbody>
