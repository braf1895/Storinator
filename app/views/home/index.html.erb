<head>
  <title>Welcome!</title>
</head>
  <h2>All Items</h2>
      <tbody>
      <% @loc.each do |location| %>
          <h3><%= location.locName %></h3>
          <table>
            <tr>
              <td>Name</td>
              <td>Number Available</td>
              <td>Number In Use</td>
              <td>Total Items</td>
              <td>Item Description</td>
            </tr>
          <% @Item.where(locations_id: location.id).find_each do |item|%>
          <tr>
            <td><%= item.iName %></td>
            <td><%= item.iAvail %></td>
            <td><%= item.iUsed %></td>
            <td><%= item.iTotal %></td>
            <td><%= item.iDesc %></td>
          </tr>
          <% end %>
          </table>
          <% end %>
      </tbody>
